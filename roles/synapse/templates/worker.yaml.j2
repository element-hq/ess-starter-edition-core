worker_app: {{ process_app }}

{% if process_type == 'main' %}
listeners:
{% else %}
worker_name: REPLACE_HOSTNAME

worker_listeners:
{% endif %}
{% if has_http %}
- port: 8008
  tls: false
  bind_addresses: ['0.0.0.0']
  type: http
  x_forwarded: true
  resources:
  - names:
    - client
    - federation
{# main always loads this if client or federation is set. media-repo workers need it explicitly set.... #}
{% if process_type == 'media-repository' %}
    - media
{% endif %}
    compress: false
{% endif %}
{% if has_replication %}
- port: 9093
  tls: false
  bind_addresses: ['0.0.0.0']
  type: http
  x_forwarded: false
  resources:
  - names: [replication]
    compress: false
{% endif %}
- type: metrics
  port: 9001
  bind_addresses: ['0.0.0.0']
# Unfortunately the metrics type doesn't get the health endpoint
- port: 8080
  tls: false
  bind_addresses: ['0.0.0.0']
  type: http
  x_forwarded: false
  resources:
  - names: []
    compress: false

database:
  name: psycopg2
  args:
    user: {{ config.database.user }}
    password: {{ _parsed_synapse_secrets.database_password | to_json }}
    database: {{ config.database.name }}
    host: {{ config.database.host }}
    port: {{ config.database.port }}
    cp_min: 5
    cp_max: 10
    application_name: REPLACE_HOSTNAME
    sslmode: {{ config.database.sslmode }}
    keepalives: 1
    keepalives_idle: 10
    keepalives_interval: 10
    keepalives_count: 3

{% if _include_media_storage_providers %}
media_storage_providers:
{% if not has_media %}
- module: file_system
  store_local: false
  store_remote: false
  store_synchronous: false
  config:
    directory: "/media/media_store"
{% endif %}
{% endif %}

{% if process_additional | length > 0 %}
{{ process_additional }}
{% endif %}
